{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["../../examples/next-js/src/*"]
    }
  },
  "include": [
    "../../examples/next-js/next-env.d.ts",
    "../../examples/next-js/**/*.ts",
    "../../examples/next-js/**/*.tsx",
    "../../examples/next-js/.next/types/**/*.ts",
    "../../examples/next-js/next.config.js"
  ],
  "exclude": ["../../examples/next-js/node_modules"]
}
